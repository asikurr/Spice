
@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Category";

}
<br/> <br/>

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-info">Menu Item List</h2>
        </div>
        <div class="col-md-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Price)</th>
                        <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                        <th>@Html.DisplayNameFor(m => m.SubCategory)</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>$ @Html.DisplayFor(m => item.Price)</td>
                        <td>@Html.DisplayFor(m => item.Category.Name)</td>
                        <td>@Html.DisplayFor(m => item.SubCategory.Name)</td>

                        <partial name="_TableButtonIconPartial" model="item.Id" />

                    </tr>
                }

                </tbody>
            </table>
        }
        else
        {
            <p>No Menu Item Exist..</p>
        }
       
    </div>
</div>
