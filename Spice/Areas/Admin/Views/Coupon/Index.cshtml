@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Coupon";

}
<br/> <br/>

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-md-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Discount)</th>
                        <th>@Html.DisplayNameFor(m => m.MinimumAmount)</th>
                        <th>@Html.DisplayNameFor(m => m.isActive)</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Discount)</td>
                        <td>@Html.DisplayFor(m => item.MinimumAmount)</td>
                        
                                @if (item.isActive == true)
                                {
                                    <td class="btn btn-success btn-sm text-white">Active</td>
                                }
                                else
                                {
                                     <td class="btn btn-danger btn-sm text-white">Not Active</td>
                                }
                           
                        <partial name="_TableButtonIconPartial" model="item.Id" />

                    </tr>
                }

                </tbody>
            </table>
        }
        else
        {
            <p>No Coupon Exist..</p>
        }
       
    </div>
</div>

